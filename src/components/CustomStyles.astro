    transition: all 0.3s ease !important;
    overflow: hidden !important;
  }
  
  .card:hover,
  article[class*="flex"]:hover,
  [class*="border"][class*="rounded"]:hover {
    transform: translateY(-4px) !important;
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.1) !important;
    border-color: #00A859 !important;
  }

  /* 7. Features 图标样式 */
  .rtl\:mr-0,
  [class*="bg-blue"],
  [class*="bg-primary"],
  .flex.items-center.justify-center.w-12.h-12,
  .flex.items-center.justify-center.w-16.h-16 {
    background-color: #E8F5E9 !important;
    color: #00A859 !important;
    border-radius: 12px !important;
  }
  
  /* SVG 图标颜色 */
  svg {
    color: currentColor !important;
  }

  /* 8. Hero 区域背景 */
  main > section:first-child,
  .relative:has(> .absolute) {
    background: linear-gradient(180deg, #FFFFFF 0%, #F8FFF9 50%, #FFFFFF 100%) !important;
    position: relative !important;
    overflow: hidden !important;
  }
  
  /* Hero 装饰元素 */
  main > section:first-child::before {
    content: '';
    position: absolute;
    top: -20%;
    right: -10%;
    width: 50%;
    height: 50%;
    background: radial-gradient(circle, #E8F5E9 0%, transparent 70%);
    opacity: 0.5;
    pointer-events: none;
    z-index: 0;
  }

  /* 9. 链接样式 */
  a:not(.btn):not([class*="btn-"]):not(nav a):not(header a) {
    color: #00A859 !important;
    text-decoration: none !important;
    transition: all 0.2s ease !important;
  }
  
  a:not(.btn):not([class*="btn-"]):not(nav a):not(header a):hover {
    color: #006B3C !important;
    text-decoration: underline !important;
  }

  /* 10. 统计数字样式 */
  .text-4xl,
  .text-5xl,
  .text-6xl {
    color: #00A859 !important;
    font-weight: 700 !important;
  }

  /* 11. 强制移除某些 Tailwind 效果 */
  .uppercase {
    text-transform: none !important;
  }
  
  .tracking-wider,
  .tracking-widest {
    letter-spacing: normal !important;
  }

  /* 12. 动画效果 */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  section {
    animation: fadeInUp 0.8s ease-out;
  }

  /* 13. 响应式调整 */
  @media (max-width: 768px) {
    .btn {
      padding: 10px 20px !important;
      font-size: 14px !important;
    }
    
    h1, .text-5xl, .text-6xl {
      font-size: 2rem !important;
    }
    
    h2, .text-4xl {
      font-size: 1.5rem !important;
    }
  }

