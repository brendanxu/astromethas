    --aw-color-secondary: #006B3C !important;
    --aw-color-accent: #00A859 !important;
    
    --aw-color-text-heading: #1A1A1A !important;
    --aw-color-text-default: #2D2D2D !important;
    --aw-color-text-muted: #737373 !important;
    
    --aw-color-bg-page: #FFFFFF !important;
    
    /* 新增 South Pole 颜色 */
    --sp-green: #00A859;
    --sp-dark-green: #006B3C;
    --sp-light-green: #E8F5E9;
    --sp-gray: #737373;
    --sp-dark: #1A1A1A;
