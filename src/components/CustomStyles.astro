  .dark {
    --aw-color-bg-page: #0A0A0A !important;
    --aw-color-text-default: #E5E5E5 !important;
    --aw-color-text-heading: #FFFFFF !important;
  }
  
  .dark .card,
  .dark article[class*="flex"],
  .dark [class*="border"][class*="rounded"] {
    background: #1A1A1A !important;
    border-color: #2D2D2D !important;
  }
  
