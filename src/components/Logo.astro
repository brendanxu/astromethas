---
import { getEntry } from 'astro:content';
import { Image } from 'astro:assets';

// 获取配置数据
const siteConfig = await getEntry('config', 'site');
const { logo } = siteConfig.data;
---

{logo.image ? (
  <Image 
    src={logo.image} 
    alt={logo.text}
    width={150}
    height={50}
    class="h-8 w-auto"
  />
) : (
  <span class="self-center ml-2 text-2xl font-bold text-gray-900 whitespace-nowrap dark:text-white">
    {logo.text}
  </span>
)}